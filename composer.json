{
    "name": "buckaroo/shopware6",
    "description": "Buckaroo payment provider plugin for Shopware 6",
    "type": "shopware-platform-plugin",
    "version": "1.0.4",
    "license": "CC-BY-NC-ND-3.0",
    "minimum-stability": "RC",
    "require": {
        "php": "^7.1",
        "shopware/core": "6.1.*",
        "shopware/storefront": "6.1.*",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-pcre": "*",
        "ext-fileinfo": "*"
    },
    "authors": [{
        "name": "Buckaroo",
        "email": "support@buckaroo.nl",
        "homepage": "https://www.buckaroo.nl",
        "role": "Developer"
    }],
    "autoload": {
        "psr-4": {
            "Buckaroo\\Shopware6\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Buckaroo\\Shopware6\\Tests\\": "tests/"
        }
    },
      "config": {
        "sort-packages": true,
        "platform": {
          "php": "7.2.9"
        }
      },
    "extra": {
        "shopware-plugin-class": "Buckaroo\\Shopware6\\BuckarooPayment",
        "plugin-icon": "src/Resources/config/plugin.png",
        "copyright": "(c) by Buckaroo",
        "label": {
            "en-GB": "Buckaroo payment for Shopware 6",
            "de-DE": "Buckaroo Payment f√ºr Shopware 6"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4",
        "phpmd/phpmd": "^2.7",
        "phpunit/phpunit": "8.3.4",
        "phpro/grumphp": "^0.15.2"
    }
}
