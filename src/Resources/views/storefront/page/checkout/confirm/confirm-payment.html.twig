{% sw_extends '@Storefront/storefront/page/checkout/confirm/confirm-payment.html.twig' %}

{% block page_checkout_confirm_payment_current_text %}

    {% if context.paymentMethod.translated.name == 'Buckaroo iDEAL' %}
    <strong>{{ "checkout.confirmCurrentPaymentShipping"|trans }}</strong>
        {{ page.extensions.buckaroo.payment_method_name }}
    {% elseif context.paymentMethod.translated.name == 'Buckaroo iDEAL Processing' %}
        <strong>{{ "checkout.confirmCurrentPaymentShipping"|trans }}</strong>
        {{ page.extensions.buckaroo.payment_method_name_processing }}
    {% elseif context.paymentMethod.translated.name == 'Buckaroo Creditcards' %}
        <strong>{{ "checkout.confirmCurrentPaymentShipping"|trans }}</strong>
        {{ page.extensions.buckaroo.payment_method_name_card }}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}
