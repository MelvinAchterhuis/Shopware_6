<label>Select a bank*:</label>
{% if page.extensions.buckaroo.issuers|length > 0 %}
    <select required="required" form="confirmPaymentForm" name="redirectParameters[issuerp]" class="custom-select" style="max-width: 300px;margin-left: 0.5rem;margin-bottom: 0.5rem;">
        {% for issuer in page.extensions.buckaroo.issuers %}
            <option {% if page.extensions.buckaroo.last_used_issuer_processing == issuer.code %} selected="selected" {% endif %} value="{{ issuer.code }}">{{ issuer.name }}</option>
        {% endfor %}
    </select>
    <input type="hidden" form="confirmOrderForm" name="issuerp" value="{{ page.extensions.buckaroo.last_used_issuer_processing }}">
{% endif %}